<Window x:Class="sound.AddOrEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sound"
        mc:Ignorable="d"
        Title="AddOrEditWindow" Height="600" Width="450">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="75"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Margin="53,10,53,15"><Run Language="ru-ru" Text="Ниче не писать"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        <TextBlock Grid.Column="1" Margin="30,5,108,65" Grid.Row="1"><Run Language="ru-ru" Text="Название" FontSize="20"/></TextBlock>
        <TextBox x:Name="txbProductName" Grid.Column="1" Margin="30,40,30,10" Grid.Row="1" ></TextBox>
        <TextBlock Grid.Column="1" Margin="30,10,108,85" Grid.Row="2"><Run Language="ru-ru" Text="Цена" FontSize="20"/></TextBlock>
        <TextBox x:Name="txbPrice" Grid.Column="1" Margin="30,62,30,13" Grid.Row="2" ></TextBox>
        <TextBlock Grid.Column="1" Margin="30,17,108,78" Grid.Row="3"><Run Language="ru-ru" Text="Описание" FontSize="20"/></TextBlock>
        <TextBox x:Name="txbDescription" Grid.Column="1" Margin="30,63,30,12" Grid.Row="3"></TextBox>
        <Button x:Name="Add" Grid.Column="1" Margin="30,43,30,32" Grid.Row="4" Content="Изменить" FontSize="24" Click="Add_Click"></Button>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="125"></RowDefinition>
            <RowDefinition Height="125"></RowDefinition>
            <RowDefinition Height="125"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

    </Grid>
</Window>
